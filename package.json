{
  "name": "index-dts",
  "version": "0.0.1",
  "description": "Root library setup",
  "keywords": [
    "typescript",
    "bundle",
    "dts"
  ],
  "license": "MIT",
  "author": {
    "name": "Alexander Karamushko",
    "email": "alex.karamushko@nordclan.com",
    "url": "https://t.me/melkor_b"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexanderKaramushko/index-dts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">=1"
  },
  "bin": {
    "index-dts": "./cli.js"
  },
  "scripts": {
    "prepublishOnly": "clean-package",
    "start": "nodemon lib/index.ts",
    "build": "ts-node esbuild/esbuild.prod.ts",
    "test": "node --expose-gc ./node_modules/.bin/jest lib --passWithNoTests",
    "test:dev": "node --expose-gc ./node_modules/.bin/jest lib --watch --passWithNoTests"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "esbuild": "0.15.5",
    "esbuild-plugin-ignore": "1.1.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-testing-library": "^5.10.0",
    "husky": "8.0.2",
    "jest": "29.4.1",
    "lint-staged": "^15.2.2",
    "nodemon": "2.0.19",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.8",
    "clean-package": "^2.2.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "alias": {
    "lib": "./lib"
  },
  "dependencies": {
    "args": "^5.0.3",
    "rimraf": "^5.0.5",
    "tmp": "^0.2.3",
    "winston": "^3.12.0"
  },
  "clean-package": {
    "remove": [
      "scripts",
      "devDependencies",
      "publishConfig",
      "clean-package",
      "lint-staged",
      "alias"
    ]
  }
}
